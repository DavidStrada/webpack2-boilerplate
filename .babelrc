{
  "presets": [
    "latest",
    "stage-0"
  ],
  "env": {
    "production": {
      "presets": [
        [
          "latest",
          {
            "es2015": {
              "modules": false  // https://babeljs.io/docs/plugins/preset-es2015/
            }
          }
        ],
        "stage-0"
      ]
    },
    "test": {
      "plugins": [
        "istanbul",
        ["__coverage__", {"ignore": "*.+(test|spec|stub).*"}]
      ]
    }
  }
}
